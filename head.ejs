    <style>

        :root {
            font-size: 15px;
            font-family: "Roboto", sans-serif;
        }
        /* Pre-Header Styling */

        #preHeader {
        display: flex;
        flex-direction: row;
        overflow-x: hidden;
        overflow-y: hidden;
        }

        #preHeader > .container {
        width: auto;
        display: flex;
        flex-direction: row;
        align-items: center;
        }

        #preHeader > .container > h6 {
        font-size: 11px;
        align-self: center;
        text-align: center;
        margin: 0 2px;
        font-style: bold;
        }
        #preHeader > .container > a {
        font-size: 11px;
        align-self: center;
        text-align: center;
        margin: 0 2px;
        color: #007bff;
        text-decoration: none;
        }

        /* Nav bar styling */
        .navbar {
            box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 16px;
            background: #222;
        }

        .navbar-brand > svg {
        width: 10rem;
        }

        /* COIN PAGE STYLING */

        .coin-header{
            display: flex;
            flex-direction: row;
            width:100%;
            margin: 2rem auto;

        }

        .coin-header > .container{
            display: flex;
            justify-content: center;
        }

        .coin-header > .container:nth-child(1){
            width: 10rem;
        }

        .coin-header > .container:nth-child(2){
            flex-direction: column;
        }

        /* Coin Chart */

        .generic-container{
            max-height: 20rem;
            overflow-y: scroll; 
            text-align: center; 
            background-color: #fff;
            margin: 2rem auto;
            border-radius: 10px;
            padding: 10px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .stats{
            padding: 0;
        }
    </style>